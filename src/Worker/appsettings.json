{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Bounan": "Debug",
      "Hls2TlgrUploader": "Information",
      "System": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "Microsoft.Extensions.Http.DefaultHttpClientFactory": "Warning",
      "System.Net.Http": "Warning",
      "Polly": "Warning"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "TimestampFormat": "HH:mm:ss.fff ",
        "IncludeScopes": true
      }
    },
    "IncludeScopes": true,
    "DisableLogGroupCreation": true
  },
  "Processing": {
    "Threads": 2
  },
  "Hls2TlgrUploader": {
    "Processing": {
      "ConcurrentDownloads": 30,
      "TempVideoFilePattern": "/tmp/bounan-downloader/temp-video-{0}.mp4"
    }
  }
}
